{
  "type": "project",
  "minimum-stability": "dev",
  "require": {
    "composer/installers": "~1.0",
    "drupal/drupal": "8.4.x-dev",
    "drupal/console": "dev-master",
    "drush/drush": "8.x-dev"
  },
  "config": {
    "preferred-install": {
        "drupal/*": "source",
        "drush/*": "source",
        "*": "auto"
    }
  },
  "extra": {
    "installer-paths": {
      "/{$name}": ["drupal/drupal"]
    }
  }
}
